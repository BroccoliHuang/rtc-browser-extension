{
  "name": "RealTimeCat ScreenSharing Extension",
  "description": "RealTimeCat ScreenSharing Extension V2",
  "version": "0.2.0",
  "manifest_version": 2,
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "externally_connectable": {
    "matches": [ 
    "https://localhost:3000/*"
    ]
  },
  "permissions": [
    "desktopCapture",
    "https://*/*",
    "tabs"
  ]
}
