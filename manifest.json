{
  "name": "RealTimeCat ScreenSharing Extension",
  "description": "RealTimeCat ScreenSharing Extension 0.2",
  "version": "0.2.4",
  "manifest_version": 2,
  "icons": {
    "16":"icon16.png",
    "48":"icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "externally_connectable": {
    "matches": [
      "https://localhost/*",
      "https://shishimao.com/*",
      "https://rtcat.io/*",
      "https://rtcat.io:4001/*",
      "https://ecloudeal.com/*",
      "https://rtc-rooms.com/*"
    ]
  },
  "permissions": [
    "desktopCapture",
    "https://*/*",
    "tabs"
  ]
}
