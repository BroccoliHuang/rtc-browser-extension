{
  "name": "RealTimeCat ScreenSharing Extension",
  "description": "RealTimeCat ScreenSharing Extension 0.3",
  "version": "0.3.6",
  "manifest_version": 2,
  "icons": {
    "16":"icon16.png",
    "48":"icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "js": ["inject.js"]
    }
  ],
  "externally_connectable": {
    "matches": [
      "*://localhost:*/*",
      "https://*.test.dev:*/*",
      "https://shishimao.com/*",
      "https://rtcat.io:*/*",
      "https://ecloudeal.com/*",
      "https://rtc-rooms.com/*",
      "https://v.sishuedu.com/*"
    ]
  },
  "permissions": [
    "desktopCapture"
  ]
}
